<h1>New Todo</h1>

<%= form_with(url: todos_path, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <%= form.submit 'Create Todo', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', todos_path, class: 'btn btn-primary' %>
