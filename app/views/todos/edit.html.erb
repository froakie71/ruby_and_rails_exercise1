<h1>Edit Todo</h1>

<%= form_with(url: todo_path(@todo[:id]), method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, value: @todo[:title] %>
  </div>

  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed, checked: @todo[:completed] %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', todos_path %>
